# ESP32 Configuration for Unit Tests (ESP32-S3)
CONFIG_IDF_TARGET="esp32c6"

# Unity test framework
CONFIG_UNITY_ENABLE_FLOAT=y
CONFIG_UNITY_ENABLE_DOUBLE=y
CONFIG_UNITY_ENABLE_IPC_ISR=y

# Increase main task stack size for tests
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# Enable console for test output
CONFIG_ESP_CONSOLE_UART_DEFAULT=y
CONFIG_ESP_CONSOLE_UART_NUM=0
CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200

# Disable WiFi for unit tests (tests don't need actual WiFi)
# CONFIG_ESP_WIFI_ENABLED is not set

# Disable task watchdog for interactive test menu
CONFIG_ESP_TASK_WDT_EN=n

# Custom partition table with larger app partition (2MB)
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

# Flash size configuration (4MB to accommodate 2MB app + other partitions)
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="4MB"

# Line ending configuration
CONFIG_LIBC_STDIN_LINE_ENDING_CR=y
CONFIG_LIBC_STDOUT_LINE_ENDING_CRLF=y
